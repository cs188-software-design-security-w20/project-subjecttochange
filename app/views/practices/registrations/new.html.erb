<%= render 'layouts/alert' %>
<div class="section-signup mt-0">
  <div class="container mb-5">
    <div class="row row-grid justify-content-between align-items-center">
      <div class="col-lg-6">
        <h3 class="display-3 text-white">Streamline your practice's
          <span class="text-white">medical record storage and appointments.  </span>
        </h3>
        <p class="text-white mb-3">Every medical practice creates thousands of medical records per year, yours probably included, with an antiquated system of storing these files. Most practices store their records in flat files, or even in physical folders! Our service provides a secure, online database for all of your patients records and a collaborative calendar program to streamline the appointment creation process.</p>
        <div class="btn-wrapper">
          <p> Already a user? Login here.</p>
          <%= link_to "Practice Login",   new_practice_session_path, {:class => "btn btn-info"} %>
        </div>
      </div>
      <div class="col-lg-6 text-center align-text-center p-1">
        <div class="card card-register p-2 mb-2">
          <div class="mt-4 justify-content-md-center">
            <h4 class="mb-1 text-white text-center h2 font-weight-bold">Practice Registration</h4>
          </div>
          <div class="container">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form mt-2 mb-3'}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.text_field :first_name, :required => true, autofocus: true, autocomplete: "fname", class: 'form-control mb-2', placeholder: 'First Name' %>
              </div>
              <div class="field">
                <%= f.text_field :middle_initial, autofocus: true, class: 'form-control mb-2', placeholder: 'Middle Initial', maxlength:'1'  %>
              </div>
              <div class="field">
                <%= f.text_field :last_name, :required => true, autofocus: true, autocomplete: "lname", class: 'form-control mb-2', placeholder: 'Last Name' %>
              </div>
              <div class="field">
                <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email", class: 'form-control mb-2', placeholder: 'Email' %>
              </div>

              <div class="field">
                <%= f.password_field :password, :required => true, autocomplete: "new-password", class: 'form-control mb-2', placeholder: 'Password (' + @minimum_password_length.to_s + ' characters minimum)' %>
              </div>

              <div class="field">
                <%= f.password_field :password_confirmation, :required => true, autocomplete: "new-password", class: 'form-control mb-2', placeholder: 'Password Confirmation' %>
              </div>

              <div class="field">
                <%= f.text_field :med_school, :required => true, class: 'form-control mb-2', placeholder: 'Medical School' %>
              </div>
              <div class="field">
                <%= f.text_field :phone_number, :required => true, autocomplete: "tel", class: 'form-control mb-2', placeholder: 'Phone Number' %>
              </div>
              <div class="field">
                <%= f.text_field :city, :required => true, autocomplete: "city", class: 'form-control mb-2', placeholder: 'City', maxlength:'2'  %>
              </div>
              <div class="field">
                <%= f.text_field :state, :required => true, autocomplete: "state", class: 'form-control mb-2', placeholder: 'State' %>
              </div>
              <div class="field">
                <%= f.text_field :zipcode, :required => true, autocomplete: "zipcode", class: 'form-control mb-2', placeholder: 'Zipcode', maxlength:'5'  %>
              </div>

              <div class="actions">
                <%= f.submit "Get Started", class:'col btn btn-info btn-round btn-lg text-center mt-4' %>
              </div>
              <p class="text-center font-weight-light p-1">By submitting this form, you agree to our <%= link_to "terms of service", "#"%>.</p>
            <% end %>
          </div>
        </div>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:'text-center' %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
