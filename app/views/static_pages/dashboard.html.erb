<script>
    // Set links to active when clicked, and disable active from other links
    $('.nav-pills-icons').on('click','a', function(event){
        // event.preventDefault();
        $(this).addClass('active');
        let siblingLis = $(this).parent().siblings();
        for (let i = 0; i < siblingLis.length; i++) {
            $(siblingLis[i]).find('a').removeClass('active');
        }
    });

    // Ensures another nav element doesn't have the active link in the event we hit back to get to this
    // page after following a link (because for some reason that doesn't reset the javascript changes)
    $(document).ready(function() {
        let activeLink = $('#default-active-link');
        activeLink.addClass('active');
        let siblingLis = activeLink.parent().siblings();
        for (let i = 0; i < siblingLis.length; i++) {
            $(siblingLis[i]).find('a').removeClass('active');
        }
    });
</script>
