<div class="section-signup mt-0">
  <div class="container mb-5 ">
    <%= render 'layouts/alert' %>
    <div class="row row-grid justify-content-between align-items-center ">
      <div class="col-lg-2 text-center align-text-center p-1">
      </div>
      <div class="col-lg-8 text-center align-text-center p-1">
        <div class="card card-register p-2 mb-2">
          <div class="mt-4 justify-content-md-center">
            <h4 class="mb-1 text-white text-center h2 font-weight-bold">Edit Your <%= resource_name.to_s.humanize %> Information</h4>
            <p class="mb-1 text-white text-center font-weight-bold">You can directly edit your information here.</p>
          </div>
          <div class="container">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => 'form mt-2 mb-3'}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "fname", class: 'form-control mb-2', placeholder: 'First Name' %>
              </div>
              <div class="field">
                <%= f.label :middle_initial %>
                <%= f.text_field :middle_initial, autofocus: true, class: 'form-control mb-2', placeholder: 'Middle Initial', maxlength:'1' %>
              </div>
              <div class="field">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "lname", class: 'form-control mb-2', placeholder: 'Last Name' %>
              </div>

              <div class="field">
                <%= f.label :email %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  Unconfirmed Email!<br />
                <% end %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-2'%>
              </div>

              <div class="field">
                <%= f.label :password %> (leave blank to not change) <br />
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mb-2', placeholder: 'Password (' + @minimum_password_length.to_s + ' characters minimum)' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-2', placeholder: 'Password Confirmation' %>
              </div>

              <div class="field">
                <%= f.label :gender %>
                <%= f.text_field :gender, autocomplete: "sex", class: 'form-control mb-2', placeholder: 'Gender', maxlength:'1'  %>
              </div>

              <div class="field">
                <%= f.label :birthdate %>
                <%= f.date_field :birthdate, autocomplete: "bday", class: 'form-control mb-2', placeholder: 'Birthdate (mm/dd/yyyy)' %>
              </div>
              <div class="field">
                <%= f.label :phone_number %>
                <%= f.text_field :phone_number, autocomplete: "tel", class: 'form-control mb-2', placeholder: 'Phone Number' %>
              </div>
              <div class="field">
                <%= f.label :city %>
                <%= f.text_field :city, autocomplete: "city", class: 'form-control mb-2', placeholder: 'City' %>
              </div>
              <div class="field">
                <%= f.label :state %>
                <%= f.text_field :state, autocomplete: "state", class: 'form-control mb-2', placeholder: 'State', maxlength:'2'  %>
              </div>
              <div class="field">
                <%= f.label :zipcode %>
                <%= f.text_field :zipcode, autocomplete: "zipcode", class: 'form-control mb-2', placeholder: 'Zipcode', maxlength:'5'  %>
              </div>

              <div class="field">
                <%= f.label :current_password_to_confirm_changes %><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control mb-2', placeholder: 'Current Password' %>
              </div>

              <div class="actions">
                <%= f.submit "Confirm Changes", class:'col btn btn-info btn-round btn-lg text-center mt-4' %>
              </div>
            <% end %>
          </div>
        </div>
          <%= button_to "Unhappy? Close your account.", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'form-control mb-2' %>
      </div>
      <div class="col-lg-2 text-center align-text-center p-1">
      </div>
    </div>
  </div>
</div>
