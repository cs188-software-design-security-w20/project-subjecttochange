<br>

<div class="header">Medical Records</div>

<div class="new_med_rec_btn">
<%= link_to "New Medical Record", new_medical_record_path, class:'col btn btn-info btn-round btn-sm text-center mt-4' %>
</div>

<table class="medical_records">
  <thead>
    <tr>
      <th>Title</th>
      <th>Practice</th>
      <th>Date Created</th>
      <th>View</th>
      <th>Download</th>
      
    </tr>
  </thead>

  <tbody>
    <% current_patient.medical_records.each do |medical_record| %>
      <tr>
        <td><%= medical_record.title %></td>
        <td><%= medical_record.practice_email %></td>
        <td><%= medical_record.created_at %></td>
        <td><%= link_to "View File", medical_record.file if medical_record.file.attached? %></td>
        <td><%= link_to "Download File", medical_record.file, download: '' if medical_record.file.attached? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

